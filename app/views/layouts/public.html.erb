<!DOCTYPE html>
<html>
	<head>
	  <title>Simple Cms<%= " | #{@page_title}" if @page_title %></title>
	  <%= stylesheet_link_tag('application', media: "all") %>
	</head>
	<body>
		<div id="header">
			<h1>Simple CMS</h1>
		</div>
		<div id="main">
			<div id="navigation">
				<%= render(:partial => "layouts/navigation", :locals => {:subjects => @subjects}) %>
			</div>
			<div id="content">
				<!-- Before yield -->
				<%= yield %>
				<!-- After yield -->
			</div>
			<div class="clear">
			</div>
		</div>
		<div id="footer">
			<p id="copyright">&copy; Channe</p>
		</div>
	</body>
</html>
